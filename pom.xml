  <build>
  	<finalName>home</finalName>
  	<resources>
  		<resource>
  			<directory>src/main/resources</directory>
  			<excludes>
  				<exclude>dbcp.properties</exclude>
  			</excludes>
  		</resource>
  		<resource>
  			<directory>src/main/resources</directory>
  			<includes>
  				<include>dbcp.properties</include>
  			</includes>
  			<filtering>true</filtering>
  		</resource>
  	</resources>
    <plugins>
		<plugin>
			<groupId>org.springframework.boot</groupId>
